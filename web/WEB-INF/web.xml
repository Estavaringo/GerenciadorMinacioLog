<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>Executa</servlet-name>
        <servlet-class>br.com.minaciolog.gerenciador.servlet.Controller</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Executa</servlet-name>
        <url-pattern>/Executa</url-pattern>
    </servlet-mapping>
       

    <filter>
        <filter-name>Filtro</filter-name>
        <filter-class>br.com.minaciolog.gerenciador.servlet.Filtro</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>Filtro</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
